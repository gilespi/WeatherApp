<html lang='en'>
  <head>
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' href='/img/weather-forecast.png' />
    <link rel='stylesheet' href='/css/style.css' />
    <title>Weather App</title>
  </head>
  <body>
    <div class='weather-app' id='weather-app'>
      <div class='container'>
        <div class='container-brand'>
          <img class='logo' src='/img/weather-forecast.png' />
          <h3 class='brand'>Weather Forecast</h3>
        </div>
        <h1 class='temp'>16&#176;</h1>

        <div class='city-time'>
          <h1 class='name'></h1>
          <h3 class='country'></h3>
          <small>
            <span class='time'></span>
            -
            <span class='date'></span>
          </small>
        </div>

        <div class='weather'>
          <img src='' class='icon' alt='icon' width='60' height='60' />
          <span class='condition'></span>
        </div>
      </div>
      <div class='panel'>
        <form id='search-form' action='/weather' method='get'>

          <input
            type='text'
            name='search'
            id='search'
            placeholder='Search Location...'
          />
          <button type='submit' class='submit'>
            Search
          </button>
        </form>

        <ul class='details'>
          <h4>Weather Details</h4>
          <li>
            <span>Cloudy</span>
            <span class='cloud'></span>
          </li>
          <li>
            <span>Humidity</span>
            <span class='humidity'></span>
          </li>
          <li>
            <span>Wind Speed</span>
            <span class='wind'></span>
          </li>
          <li>
            <span>Wind Direction</span>
            <span class='wind-Dir'></span>
          </li>
          <li>
            <span>Feelslike</span>
            <span class='feelslike'></span>
          </li>
          <li>
            <span>Pressure</span>
            <span class='pressure'></span>
          </li>
          <li>
            <span>Visibility</span>
            <span class='visibility'></span>
          </li>
          <li>
            <span>Precipitation</span>
            <span class='precip'></span>
          </li>
        </ul>
      </div>
    </div>

    <script src='/js/main.js'></script>

  </body>
</html>